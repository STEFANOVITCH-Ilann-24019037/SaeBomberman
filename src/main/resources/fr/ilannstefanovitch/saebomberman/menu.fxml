<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.ilannstefanovitch.saebomberman.MenuController"
      alignment="CENTER"
      spacing="30"
      style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e);">
    <children>
        <Label text="BOMBERMAN" textFill="WHITE">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
        </Label>

        <VBox alignment="CENTER" spacing="15">
            <children>
                <Button fx:id="playButton" onAction="#startGame"
                        prefHeight="50.0" prefWidth="200.0"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10;"
                        text="JOUER" />

                <Button fx:id="rulesButton" onAction="#showRules"
                        prefHeight="50.0" prefWidth="200.0"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10;"
                        text="RÈGLES" />

                <Button fx:id="quitButton" onAction="#quitGame"
                        prefHeight="50.0" prefWidth="200.0"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10;"
                        text="QUITTER" />
            </children>
        </VBox>

        <VBox alignment="CENTER" spacing="10">
            <children>
                <Label text="RÈGLES DU JEU :" textFill="LIGHTGRAY">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <Label text="• ZQSD ou flèches pour bouger" textFill="LIGHTGRAY">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label text="• ESPACE pour poser une bombe" textFill="LIGHTGRAY">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label text="• Détruisez les murs et éliminez les ennemis !" textFill="LIGHTGRAY">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </padding>
</VBox>